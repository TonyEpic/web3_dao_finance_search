 volume = {148},
 year = {2023}
}

@article{DIAZGONZALEZ201947,
 abstract = {Uncontrolled anthropogenic activities carried out for many years are behind the spillage into our water bodies of a high number of chemicals of environmental concern. Even though framework directives on water policies describing monitoring programs for controlling water contaminants have been released and amended during the last few decades, it appears not to have been fully materialized. There is an urgent need for searching for deployable analytical tools that initially help in the strict detection of priority pollutants and could perform as alert systems too. Electrochemical sensor approaches have been identified as suitable candidates in this scenario. With this short review, we aim to provide an overview on recent advances in the fabrication of compact electroanalytical tools with the potential for being readily applied in decentralized studies of water contamination events.},
