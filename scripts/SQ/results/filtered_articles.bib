 journal = {International Journal of Electrical Power & Energy Systems},
 keywords = {Smart grids, Probabilistic power flow, Machine learning, Decentralized systems, Optimal power flow},
 pages = {107990},
 title = {A fully decentralized machine learning algorithm for optimal power flow with cooperative information exchange},
 url = {https://www.sciencedirect.com/science/article/pii/S0142061522000370},
 volume = {139},
 year = {2022}
}

