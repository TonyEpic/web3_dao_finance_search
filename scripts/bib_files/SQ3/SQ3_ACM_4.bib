@inproceedings{10.1145/3210284.3219776,
author = {Pajic, Jelena and Rivera, Jos\'{e} and Zhang, Kaiwen and Jacobsen, Hans-Arno},
title = {EVA: Fair and Auditable Electric Vehicle Charging Service using Blockchain},
year = {2018},
isbn = {9781450357821},
