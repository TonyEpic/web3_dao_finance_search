publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3603166.3632554},
doi = {10.1145/3603166.3632554},
abstract = {This paper explores the economic implications of outsourcing data and computation to a cloud provider in comparison to maintaining an on-premise data center. Our investigation is twofold: contrasting a private data center with a trusted cloud, and the evaluation of the costs associated with securing an untrusted (e.g., honest-but-curious) cloud. We revisit prior cost models based on the current cost of CPU cycles and cryptographic operations. To evaluate the cost of securing a public cloud, we compare execution in AWS EC2 with AWS Clean Rooms, which facilitates encrypted querying. Our study offers a nuanced perspective on the economic feasibility of different cloud computing paradigms, providing essential insights for organizations contemplating the transition from local infrastructure to public cloud providers. Additionally, our analysis sheds light on the cost implications of securing against trusted insider threats, emphasizing the importance of aligning cloud computing decisions with an organization's risk tolerance and security posture. Outsourcing computation to a trusted cloud provider is economical today as cloud costs have declined since 2010, but securing against an untrusted cloud remains economically unviable despite advances in secure query processing and new cloud services.},
booktitle = {Proceedings of the IEEE/ACM 16th International Conference on Utility and Cloud Computing},
articleno = {59},
numpages = {6},
keywords = {cloud computing economics, cloud security, performance},
location = {Taormina (Messina), Italy},
series = {UCC '23}
}

