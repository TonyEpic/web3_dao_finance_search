journal = {Neurocomputing},
volume = {163},
pages = {47-55},
year = {2015},
note = {Recent Advancements in Hybrid Artificial Intelligence Systems and its Application to Real-World Problems Progress in Intelligent Systems Mining Humanistic Data},
issn = {0925-2312},
