@inproceedings{10.1145/1101499.1101509,
author = {Santos, Robson and Andrade, Alisson and Cirne, Walfredo and Brasileiro, Francisco and Andrade, Nazareno},
title = {Accurate autonomous accounting in peer-to-peer Grids},
year = {2005},
