articleno = {36},
numpages = {4},
location = {Baltimore, Maryland, USA},
series = {SSDBM '13}
}

@inproceedings{10.1145/2967413.2967425,
author = {Streit, Franz-Josef and Pantho, Md Jubaer Hossain and Bobda, Christophe and Roullet, Cindy},
