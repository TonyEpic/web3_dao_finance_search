}

@inproceedings{10.1145/3651655.3651657,
author = {Chen, Mingyuan and Chen, Bin and Ling, Zejun and Zhang, Peichang and Zhang, Shengli},
title = {A Study of Managing University Course based on Decentralized Identifiers},
year = {2024},
isbn = {9798400708671},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3651655.3651657},
doi = {10.1145/3651655.3651657},
abstract = {The use of decentralized identifiers in university course management is explored to address the need for traceability and efficient verification in the educational administration system. Based on the FISCO-BCOS blockchain and WeIdentity decentralized identifiers solution, decentralized identifiers are assigned to administrators, teachers, students, and courses. According to the characteristics of university courses, a course registration model and a credit certification model are designed based on the features of decentralized identifiers enabled by blockchain technology. It grants teachers and students self-sovereignty over their identities, ensures the immutability and traceability of learning records, and effectively verifies credentials. Finally, the experimental results demonstrate that this application model can achieve on-chain recording of courses and provide effective credit authentication.},
booktitle = {Proceedings of the 2023 6th International Conference on Blockchain Technology and Applications},
