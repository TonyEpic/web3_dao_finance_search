url = {https://www.sciencedirect.com/science/article/pii/B9780128180143000085},
author = {Quanqing Xu and Zhaozheng He and Zengxiang Li and Mingzbhong Xiao and Rick Siow Mong Goh and Yongjun Li},
keywords = {Sensor, Blockchain, Smart building, Ethereum, Raspberry Pi},
abstract = {A smart building system can help us to optimize the capability of all the equipment and systems in a building. Blockchain was first introduced by Bitcoin in 2009 and developers all around the world have been trying to apply blockchain in different areas, like finance services, credit and ownership management, resource sharing, investment management, Internet of things (IoT), and so on. Ethereum is a blockchain 2.0 platform that allows developers to build a decentralized application (DApp) without building a new blockchain from scratch. IoT is the technology to embed all physical devices with sensors and chips to provide automation via machine-to-machine communication. Blynk is a platform that provides iOS and Android applications for users and developers to collect data from microcontroller. Our goal in this chapter is to build a blockchain-based, DApp named Uranus for smart building system management with private Ethereum blockchain, Raspberry Pi (RPi), Blynk platform, and sensors (e.g., DHT11). The blockchain technology in Uranus provides three benefits: (1) it is tamper-resistant, (2) it has no single point of failure, and (3) it is trusted and auditable. The system is a proof-of-concept (PoC) system prototype to simulate smart building applications. It collects real-time building temperature and humidity through a DHT11 sensor via RPi. The sensor data is updated to the Blynk app and stored on the smart contract deployed on the private Ethereum blockchain. If the real-time temperature or humidity value exceeds the threshold value set by the users, red or green LEDs will be turned on as warnings and then an air conditioner or dehumidifier will be turned on. We build a PoC smart building system to verify its feasibility and demonstrate its performance based on a simulated testbed.}
}
@article{AKAI200641,
title = {Fiscal decentralization and centralization under a majority rule: A normative analysis},
journal = {Economic Systems},
volume = {30},
number = {1},
pages = {41-55},
year = {2006},
issn = {0939-3625},
doi = {https://doi.org/10.1016/j.ecosys.2005.08.003},
url = {https://www.sciencedirect.com/science/article/pii/S0939362506000057},
author = {Nobuo Akai and Kazuhiko Mikami},
keywords = {Fiscal (de)centralization, Local public services, Majority rule, Minorities’ interests},
abstract = {In his seminal work on fiscal federalism, Oates [Oates, W., 1972. Fiscal Federalism. Harcourt Brace Jovanovich, New York, NY] addressed the so-called Decentralization Theorem, which states that, if such factors as scale economies and spillovers are left out of consideration, a decentralized system is always more efficient than a centralized system for supplying local public goods. Based on his analytical framework, we show that a decentralized system may at times be inferior in efficiency to a centralized system under a democratic decision rule (Proposition 2). An intuition for this result is that, under majority rule, a majority may choose an extreme policy in a local district that best matches its own preference but ignores the interests of minorities. In some cases, such disregard of minority taste may result in a considerable loss of efficiency. If instead some moderate policies are chosen through voting in an integrated constituency, then the interests of minorities could be better served to some extent. As a result, centralization would improve social welfare.}
}
@article{GROE2024114182,
