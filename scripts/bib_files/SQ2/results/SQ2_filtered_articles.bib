 number = {2},
 pages = {100178},
 title = {A critical literature review of security and privacy in smart home healthcare schemes adopting IoT & blockchain: Problems, challenges and solutions},
 url = {https://www.sciencedirect.com/science/article/pii/S2096720923000532},
 volume = {5},
