 doi = {https://doi.org/10.1016/j.techsoc.2024.102549},
 issn = {0160-791X},
 journal = {Technology in Society},
 keywords = {Blockchain, Ethereum, Pre-owned medical equipment, Smart contracts, Resale, Leasing, Auctioning},
 pages = {102549},
 title = {Blockchain-based resale and leasing of pre-owned medical equipment},
 url = {https://www.sciencedirect.com/science/article/pii/S0160791X24000976},
 volume = {77},
 year = {2024}
