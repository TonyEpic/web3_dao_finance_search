@article{10.1145/3649132,
author = {Keizer, Navin and Ascigil, Onur and Kr\'{o}l, Michal and Kutscher, Dirk and Pavlou, George},
title = {A Survey on Content Retrieval on the Decentralised Web},
year = {2024},
