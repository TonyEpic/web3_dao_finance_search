booktitle = {Proceedings of the 8th International Conference on Utility and Cloud Computing},
pages = {65–74},
numpages = {10},
keywords = {multi-objective optimisation, machine reassignment, large decentralised data centres, evolutionary algorithms},
location = {Limassol, Cyprus},
series = {UCC '15}
}

