@article{NESARANI2020101064,
title = {An efficient approach for rice prediction from authenticated Block chain node using machine learning technique},
journal = {Environmental Technology & Innovation},
volume = {20},
pages = {101064},
year = {2020},
issn = {2352-1864},
doi = {https://doi.org/10.1016/j.eti.2020.101064},
