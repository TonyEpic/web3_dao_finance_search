 note = {2020 International Conference on Identification, Information and Knowledge in the Internet of Things, IIKI2020},
 pages = {377-382},
 title = {KCB-BC-SSE: A Keyword Complete Binary Tree Searchable Symmetric Encryption Scheme using Blockchain},
