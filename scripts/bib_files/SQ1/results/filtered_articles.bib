 title = {From promise to practice: A cross-institutional analysis of design trends, enablers and challenges in blockchain-enabled cash and voucher delivery},
 url = {https://www.sciencedirect.com/science/article/pii/S221242092300609X},
 volume = {100},
 year = {2024}
}

@article{HOSSEINIBAMAKAN2024100064,
