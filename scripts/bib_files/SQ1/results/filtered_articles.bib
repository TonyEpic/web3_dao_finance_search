 keywords = {Blockchain, Ethereum, NFTs, Traceability, Healthcare, Supply chain, Smart contracts},
 number = {2},
 pages = {527-543},
 title = {NFT-IoT Pharma Chain : IoT Drug traceability system based on Blockchain and Non Fungible Tokens (NFTs)},
