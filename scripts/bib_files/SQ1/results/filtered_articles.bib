 issn = {2835-3498},
 keywords = {Authorization;Runtime;Smart contracts;Authentication;Manuals;Decentralized applications;Behavioral sciences;Web3;Decentralized applications;Application Programming Interface (API);Blockchain;Security},
 month = {July},
