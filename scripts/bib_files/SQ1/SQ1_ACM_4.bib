}

@inproceedings{10.1145/3451471.3451484,
author = {Marotta, Giovanni and Fornaia, Andrea and Moschitta, Agatino and Pappalardo, Giuseppe and Tramontana, Emiliano},
title = {NausiChain: a Mobile Decentralized App Ensuring Service Continuity to University Life in Covid-19 Emergency Times},
