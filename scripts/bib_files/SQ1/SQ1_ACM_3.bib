@inproceedings{10.1145/3638209.3638236,
author = {Widjaja, Christian Teguh Prasetya and Widjaja, Moeljono and Wicaksana, Arya},
title = {Community-Driven Moderation in Blockchain-Based Social Media},
year = {2024},
