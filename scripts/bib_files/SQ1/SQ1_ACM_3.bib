pages = {181–185},
numpages = {5},
keywords = {Blockchain-based social media, Community-driven, Decentralized moderation, Performance},
location = {Tokyo, Japan},
series = {CIIS '23}
}

@inproceedings{10.1145/3510547.3517921,
author = {Shakarami, Mehrnoosh and Benson, James and Sandhu, Ravi},
