@inproceedings{10.1145/3477314.3507241,
author = {Petrovska, Ana and Weick, Julian},
title = {Realization of adaptive system transitions in self-adaptive autonomous robots},
year = {2022},
isbn = {9781450387132},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
