@inproceedings{10.1145/3410699.3413790,
author = {Cirillo, Albenzio and Mauro, Antonio and Pennino, Diego and Pizzonia, Maurizio and Vitaletti, Andrea and Zecchini, Marco},
title = {Decentralized robinson list},
year = {2020},
isbn = {9781450380799},
publisher = {Association for Computing Machinery},
