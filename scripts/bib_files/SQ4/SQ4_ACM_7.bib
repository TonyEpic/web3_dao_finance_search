@inproceedings{10.1145/2188286.2188317,
author = {Stingl, Dominik and Gross, Christian and Saller, Karsten and Kaune, Sebastian and Steinmetz, Ralf},
title = {Benchmarking decentralized monitoring mechanisms in peer-to-peer systems},
year = {2012},
isbn = {9781450312028},
publisher = {Association for Computing Machinery},
