@article{RITZ2023135,
title = {O.34.1 - Primary care needs of Gender and Sexual Diversity patients: it’s (almost) all about communication!: Presenter(s): Melissa Dominicé Dao, Geneva University Hospitals, Switzerland},
journal = {Patient Education and Counseling},
volume = {109},
