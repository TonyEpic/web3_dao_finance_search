 keywords = {privacy, security, blockchain, federated learning, Healthcare system},
 month = {jun},
 number = {2s},
 numpages = {24},
 publisher = {Association for Computing Machinery},
 title = {Privacy-preserving Decentralized Learning Framework for Healthcare System},
 url = {https://doi.org/10.1145/3426474},
