 journal = {Alexandria Engineering Journal},
 keywords = {6G wireless network, Blockchain technology, Internet of everything (IoE), Security, Cloud computing, Cyber-physical systems, Smart cities},
 pages = {199-220},
 title = {Blockchain technology meets 6 G wireless networks: A systematic survey},
