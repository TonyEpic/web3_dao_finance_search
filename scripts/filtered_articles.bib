 doi = {https://doi.org/10.1016/j.jbusres.2024.114639},
 issn = {0148-2963},
 journal = {Journal of Business Research},
 keywords = {Blockchain, Metaverse, Decentralization, NFT, Cryptocurrency, Crypto marketing},
 pages = {114639},
 title = {Guest editorial: A blockchain-based approach to marketing in the sharing economy},
