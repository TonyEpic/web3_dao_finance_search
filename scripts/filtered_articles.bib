 publisher = {Association for Computing Machinery},
 series = {ASIA CCS '24},
 title = {Revocable TACO: Revocable Threshold based Anonymous Credentials over Blockchains},
 url = {https://doi.org/10.1145/3634737.3637656},
 year = {2024}
}

