@inproceedings{10.1145/3390566.3391669,
 abstract = {Land title deeds are important documents that can be used to verify ownership and transfer history of lands. In Thailand, the Department of Lands operates and facilitates the transfer of ownership and other operations related to lands. The current technology used in the operations often encounters problems with the reliability of operations and complexities that cause delays. This paper investigates a proof-of-concept (PoC) of the integration of blockchain in the land registration system to improve the reliability of storage and reduces the steps in the process. The process of loan contracts with banks is used in the PoC and an Ethereum-based private blockchain is developed and tested. Performance evaluation of our proposed system can handle at least 26 transactions per second over a range of a number of transactions of interest. The results show promising potential both in the reduction of process and the performance of blockchain for the proposed use case.},
 address = {New York, NY, USA},
 author = {Pongnumkul, Suporn and Khonnasee, Chanop and Lertpattanasak, Swiss and Polprasert, Chantri},
