 journal = {International Journal of Disaster Risk Reduction},
 keywords = {disaster risk management, anticipatory action, blockchain, predictive analytics, cash and voucher programmes, united nations},
 pages = {104644},
 title = {Anticipate, Automate, Accelerate: A Framework for Blockchain in Anticipatory Action},
 url = {https://www.sciencedirect.com/science/article/pii/S2212420924004060},
 year = {2024}
}

@article{JUTEL2022100422,
 abstract = {Summary
